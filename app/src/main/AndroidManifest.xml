<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SchoolManagmentapp"
        tools:targetApi="31"
        tools:ignore="ExtraText">

        <!-- First Page (MainActivity) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Second Page (loginActivity) -->
        <activity android:name=".loginActivity" android:exported="true" />

        <!-- Third Page (Dashboard) -->
        <activity android:name=".Dashboard" android:exported="true" />

        <!-- Other Activities -->
        <activity android:name=".profileActivity" android:exported="true" />
        <activity android:name=".quizActivity" android:exported="true" />
        <activity android:name=".SubjectActivity" android:exported="true" />
        <activity android:name=".teacherActivity" android:exported="true" />
        <activity android:name=".tipActivity" android:exported="true" />
    </application>
</manifest>
